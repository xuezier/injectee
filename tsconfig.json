{
    "compilerOptions": {
        "alwaysStrict": false,
        "noImplicitUseStrict": false,
        "target": "es6",
        "lib": ["dom", "es7"],
        "types": ["node"],
        "typeRoots": [
            "node_modules/@types"
        ],
        "module": "commonjs",
        "moduleResolution": "node",
        "experimentalDecorators":true,
        "emitDecoratorMetadata": true,
        "sourceMap": true,
        "declaration": true,
        "outDir": "app"
    },
    "include": [
        "src/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "app"
    ]
}